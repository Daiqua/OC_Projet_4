<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisir une salle"
            android:layout_gravity="center"
            android:textSize="@dimen/size_fragment_rooms_list_header"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp">


            <Button
                android:id="@+id/fragment_room_list_room1"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 1"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 2"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room3"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 3"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room4"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 4"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room5"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 5"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

            <Button
                android:id="@+id/fragment_room_list_room6"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 6"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room7"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 7"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room8"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 8"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room9"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 9"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            <Button
                android:id="@+id/fragment_room_list_room10"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Salle 10"
                android:backgroundTint="@color/room_button"
                android:textSize="@dimen/size_fragment_rooms_list_text"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>