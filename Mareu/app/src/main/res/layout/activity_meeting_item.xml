<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/activity_meetings_item_constraint_layout">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_meetings_item_constraint_layout"
        android:orientation="horizontal"
        android:id="@+id/meeting_item_header">

        <TextView
            android:id="@+id/activity_meetings_item_meeting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Name"/>

        <TextView
            android:id="@+id/activity_meetings_item_meeting_attendees_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="date"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/activity_meetings_item_meeting_attendees_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="hour"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/activity_meetings_item_meeting_attendees_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/meeting_item_header"
        app:layout_constraintStart_toStartOf="@id/meeting_item_header"
        android:text="attendees_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>