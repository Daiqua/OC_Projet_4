<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_meetings_item_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:textColor="@color/black">


    <ImageView
        android:id="@+id/activity_meeting_item_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintCircle="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/activity_meetings_item_meeting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="@dimen/size_activity_meetings_item_meeting_name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/activity_meeting_item_color"
        app:layout_constraintTop_toTopOf="@id/activity_meeting_item_color"
        />

    <TextView
        android:id="@+id/activity_meetings_item_meeting_starting_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:text="date"
        android:textColor="@color/black"
        android:textSize="@dimen/size_activity_meetings_item_meeting_starting_date_and_hour"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/activity_meetings_item_meeting_name"
        app:layout_constraintBottom_toBottomOf="@id/activity_meetings_item_meeting_name"/>

    <TextView
        android:id="@+id/activity_meetings_item_meeting_starting_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:text="hour"
        android:textColor="@color/black"
        android:textSize="@dimen/size_activity_meetings_item_meeting_starting_date_and_hour"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/activity_meetings_item_meeting_starting_date"
        app:layout_constraintBottom_toBottomOf="@id/activity_meetings_item_meeting_name"/>

    <TextView
        android:id="@+id/activity_meetings_item_meeting_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:text="duration"
        android:textColor="@color/black"
        android:textSize="@dimen/size_activity_meetings_item_meeting_duration"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/activity_meetings_item_meeting_starting_hour"
        app:layout_constraintBottom_toBottomOf="@id/activity_meetings_item_meeting_name"/>


    <TextView
        android:id="@+id/activity_meetings_item_meeting_attendees_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="attendees_list"
        android:paddingRight="73dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_activity_meetings_item_meeting_attendees_list"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/activity_meeting_item_color"
        app:layout_constraintTop_toBottomOf="@id/activity_meetings_item_meeting_name" />



    <ImageButton
        android:id="@+id/activity_meetings_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_delete_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp" />


</androidx.constraintlayout.widget.ConstraintLayout>